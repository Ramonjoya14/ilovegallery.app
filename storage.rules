rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // DEFAULT RULE - Require Authentication
    // ============================================
    // All files require authentication by default
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // ============================================
    // EVENT COVERS
    // ============================================
    // Authenticated users can read event covers
    // Only authenticated users can upload covers
    match /covers/{eventId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // ============================================
    // EVENT PHOTOS
    // ============================================
    // Authenticated users can read photos
    // Only authenticated users can upload photos
    match /photos/{eventId}/{photoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // ============================================
    // PROFILE PHOTOS
    // ============================================
    // Authenticated users can read profile photos
    // Users can only write to their own profile photo
    match /profile-photos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
