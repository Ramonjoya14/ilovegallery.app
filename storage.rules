rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    // Specific rules for covers and photos if needed
    match /covers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /photos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
